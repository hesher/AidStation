{
    "name": "aidstation",
    "version": "0.1.0",
    "private": true,
    "description": "Endurance race planning application with AI-powered race analysis",
    "scripts": {
        "start": "./start-dev.sh",
        "stop": "./stop-dev.sh",
        "stop:all": "./stop-dev.sh --all",
        "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
        "dev:web": "npm run dev --workspace=apps/web",
        "dev:api": "npm run dev --workspace=apps/api",
        "dev:worker": "cd workers/python && source venv/bin/activate && REDIS_URL=redis://localhost:6379/0 celery -A src.tasks worker --loglevel=info",
        "docker:up": "docker-compose up -d postgres redis",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "build": "npm run build --workspaces",
        "build:web": "npm run build --workspace=apps/web",
        "build:api": "npm run build --workspace=apps/api",
        "test": "npm run test --workspaces --if-present",
        "test:coverage": "npm run test:coverage --workspaces --if-present",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "lint": "npm run lint --workspaces --if-present",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "prepare": "husky"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@types/node": "^20.10.0",
        "concurrently": "^8.2.2",
        "husky": "^9.0.0",
        "prettier": "^3.1.0",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
